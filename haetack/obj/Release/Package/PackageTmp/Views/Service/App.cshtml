@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@section Script {
    <script src="/Lib/js/service/app.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var fullScreenPaddingBottom = $("#service").css('padding-bottom');
            var fullScreenPaddingTop = parseInt(fullScreenPaddingBottom.replace('px', '')) + 80;
            $($('#service')[0]).css('padding-top', fullScreenPaddingTop + 'px');

            // ready background
            var sectionPaddingTop = getOnlyVal($('.my-card').css('padding-top'));
            $('.hetekee-left-bg').css('left', sectionPaddingTop + 'px');
            $('.hetekee-right-bg').css('right', sectionPaddingTop + 'px');

            

            function getOnlyVal(stringVal) {
                return parseInt(stringVal.replace('px', ''));
            }

            $(window).load(function () {
                var windowWidth = $(window).width();
                var imgWidth = $('.hetekee-center-bg').width();
                console.log(imgWidth);
                $('.hetekee-center-bg').css('left', windowWidth / 2 - imgWidth / 2 + "px");
            });
        });
        
    </script>
}
@section Style {
    <link href="/Lib/css/service/web-app.css" rel="stylesheet" />
    <link href="/Lib/css/service/mobile-app.css" rel="stylesheet" />
}
