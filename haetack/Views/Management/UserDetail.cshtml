@model haetack.Views.Management.UserViewModel
@{
    Layout = "/Views/Shared/_ManagementLayout.cshtml";
}
@section Style {
}
@section Script {
    <script type="text/javascript">
        var app = angular.module('myApp', []).
            controller('ManagementCtrl', function ($scope) {

            });
    </script>
   
}

<section id="content">
    <section class="vbox">
        <header class="header bg-white b-b">
            <p>@(Model.User.Name) 상세내역</p>
        </header>
        <section class="scrollable wrapper">
            <div class="row">
                <div class="col-lg-6">
                    <section class="panel">
                        <div class="panel-body">
                            @if (Model.User.IsDeprecated)
                            {
                                <header class="panel-heading bg-primary lter no-borders">
                                    <div class="clearfix">
                                        <div class="clear">
                                            <small class="text-muted">비활성화중입니다.</small>
                                        </div>
                                    </div>
                                </header>
                            }
                            @if (Model.Message != null)
                            {
                                <header class="panel-heading bg-primary lter no-borders">
                                    <div class="clearfix">
                                        <div class="clear">
                                            <small class="text-muted">@(Model.Message)</small>
                                        </div>
                                    </div>
                                </header>
                            }

                            <p class="dandi-sub-title m-t">이름</p>
                            <p class="dandi-description">@(Model.User.Name)</p>
                            <div class="line"></div>

                            <p class="dandi-sub-title m-t">직책</p>
                            <p class="dandi-description">@(Model.User.Role)</p>
                            <div class="line"></div>

                            <p class="dandi-sub-title">아이디</p>
                            <p class="dandi-description">@(Model.User.Username)</p>
                            <div class="line"></div>

                            <p class="dandi-sub-title">등록일</p>
                            <p class="dandi-description">@(Model.User.Created)</p>
                            <div class="line"></div>

                            <p class="dandi-sub-title">사진</p>
                            <p class="dandi-description">
                                <img class="media-object comment-avatar notice-writer-image" 
                                     src="/News/GetUserPic?id=@(Model.User.Id)" />
                            </p>
                            <div class="line"></div>

                            <p class="dandi-sub-title">상태</p>
                            <p class="dandi-description">
                                @if (Model.User.IsDeprecated)
                                {
                                    @:비활성
                                }
                                else
                                {
                                    @:활성
                                }
                            </p>
                            <div class="line"></div>

                            <p class="align-right">
                                <a href="/Management/User" class="btn btn-s-md btn-default">목록보기</a>
                                <a href="/Management/EditUser?id=@(Model.User.Id)" class="btn btn-s-md btn-default">정보변경</a>
                                <a href="/Management/ChangeUserPic?id=@(Model.User.Id)&message=''" class="btn btn-s-md btn-default">사진변경</a>
                                <a href="/Management/ChangePassword?id=@(Model.User.Id)&message=''" class="btn btn-s-md btn-default">비밀번호변경</a>
                                @if (Model.User.IsDeprecated)
                                {
                                    <a href="/Management/ChangeStateUser?id=@(Model.User.Id)" class="btn btn-s-md btn-danger">활성화</a>
                                }
                                else
                                {
                                    <a href="/Management/ChangeStateUser?id=@(Model.User.Id)" class="btn btn-s-md btn-success">비활성화</a>
                                }
                            </p>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
