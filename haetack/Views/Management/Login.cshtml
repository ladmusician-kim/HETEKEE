@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<section id="content" class="m-t-lg wrapper-md animated fadeInUp">
    <a class="nav-brand" href="#">hetekee</a>
    <div class="row m-n">
        <div class="col-md-4 col-md-offset-4 m-t-lg">
            <section class="panel">
                <header class="panel-heading text-center m-t m-b">

                    @if (Model != null && Model.Error != null)
                    {
                        <span class="dandi-red">@(Model.Error)</span>
                    }
                    else
                    {
                        @:로그인
                    }
                </header>
                @using (Html.BeginForm("Login", "Management", new { }, FormMethod.Post, new { @class = "panel-body" }))
                {
                    <div class="form-group">
                        <label class="control-label">아이디</label>
                        <input type="text" name="username" placeholder="다들 아시죠?" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label">비밀번호</label>
                        <input type="password" name="password" id="inputPassword" placeholder="틀리면 500원" class="form-control">
                    </div>
                    <div class="line line-dashed"></div>

                    <input type="submit" class="btn dandi-btn-login btn-block m-b-sm" value="로그인" />

                    <div class="line line-dashed"></div>
                    <p class="text-muted text-center"><small>오류문의는 언제나 환영입니다</small></p>
                }
            </section>
        </div>
    </div>
</section>
