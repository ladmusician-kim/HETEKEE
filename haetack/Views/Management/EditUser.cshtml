@model haetack.Views.Management.UserViewModel
@{
    Layout = "/Views/Shared/_ManagementLayout.cshtml";
}
@section Style {
}
@section Script {
    <script type="text/javascript">
        var app = angular.module('myApp', []).
            controller('ManagementCtrl', function ($scope) {
            });
        $($('.form-control')[0]).focus();
    </script>

}

<section id="content">
    <section class="vbox">
        <header class="header bg-white b-b">
            <p>정보수정</p>
        </header>
        <section class="scrollable wrapper">
            <div class="row">
                <div class="col-lg-6">
                    <section class="panel">
                        <div class="panel-body">
                            @using (Html.BeginForm("EditUser", "Management", FormMethod.Post, new { id = "chagePassword", enctype = "multipart/form-data" }))
                            {
                                <input type="hidden" name="id" value="@(Model.User.Id)" />
                                <p class="dandi-sub-title m-t">이름</p>
                                <p class="dandi-description">
                                    <input type="text" class="form-control" placeholder="" name="name">
                                </p>
                                <div class="line"></div>
                                <p class="dandi-sub-title m-t">직책</p>
                                <p class="dandi-description">
                                    <input type="text" class="form-control" placeholder="" name="role">
                                </p>
                                <div class="line"></div>
                                <p class="align-right">
                                    <a href="/Management/UserDetail?id=@(Model.User.Id)" class="btn btn-s-md btn-default">뒤로가기</a>
                                    <input type="submit" class="btn btn-s-md btn-default" value="저장">
                                </p>
                            }
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
